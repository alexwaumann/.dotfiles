# vim:ft=zsh
# Filename: prompt
#
# Sourced By: $ZSH/zshrc
# Symlink To: N/A
#
# Purpose: This files contains all zsh aliases that are defined.

SPACESHIP_PROMPT_ORDER=(
    host
    user
    dir
    git
    golang
    venv
    conda
    pyenv
    terraform
    line_sep
    jobs
    exit_code
    char
)

# PROMPT
SPACESHIP_PROMPT_ADD_NEWLINE=false
SPACESHIP_PROMPT_FIRST_PREFIX_SHOW=true

# CHAR
SPACESHIP_CHAR_SYMBOL="$ "
SPACESHIP_CHAR_SYMBOL_ROOT="# "

# HOST@USER
SPACESHIP_HOST_SHOW=always
SPACESHIP_HOST_PREFIX="["
SPACESHIP_HOST_SUFFIX="@"

SPACESHIP_USER_SHOW=always
SPACESHIP_USER_PREFIX=""

# DIRECTORY
SPACESHIP_DIR_SHOW=true
SPACESHIP_DIR_PREFIX=""
SPACESHIP_DIR_SUFFIX="] "
SPACESHIP_DIR_TRUNC_REPO=true
SPACESHIP_DIR_COLOR="cyan"
SPACESHIP_DIR_LOCK_SYMBOL=" RO"
SPACESHIP_DIR_LOCK_COLOR="red"

# GIT
SPACESHIP_GIT_SHOW="true"
SPACESHIP_GIT_PREFIX=""
SPACESHIP_GIT_SYMBOL=""

SPACESHIP_GIT_BRANCH_SHOW=true
SPACESHIP_GIT_BRANCH_PREFIX=$SPACESHIP_GIT_SYMBOL
SPACESHIP_GIT_BRANCH_COLOR="magenta"

SPACESHIP_GIT_STATUS_SHOW=true
SPACESHIP_GIT_STATUS_PREFIX=" ["
SPACESHIP_GIT_STATUS_SUFFIX="]"
SPACESHIP_GIT_STATUS_UNTRACKED="?"
SPACESHIP_GIT_STATUS_ADDED="+"
SPACESHIP_GIT_STATUS_MODIFIED="!"
SPACESHIP_GIT_STATUS_DELETED="x"
SPACESHIP_GIT_STATUS_STASHED="$"
SPACESHIP_GIT_STATUS_UNMERGED="="
SPACESHIP_GIT_STATUS_AHEAD=">"
SPACESHIP_GIT_STATUS_BEHIND="<"
SPACESHIP_GIT_STATUS_DIVERGED="D"

# PACKAGE
SPACESHIP_PACKAGE_SHOW=false

# NODEJS
SPACESHIP_NODE_SHOW=false

# ELM
SPACESHIP_ELM_SHOW=false

# ELIXIR
SPACESHIP_ELIXIR_SHOW=false

# XCODE
SPACESHIP_XCODE_SHOW=false

# SWIFT
SPACESHIP_SWIFT_SHOW=false

# GOLANG
SPACESHIP_GOLANG_SHOW=false
SPACESHIP_GOLANG_SYMBOL="golang "

# PHP
SPACESHIP_PHP_SHOW=false

# RUST
SPACESHIP_RUST_SHOW=false

# HASKELL
SPACESHIP_HASKELL_SHOW=false

# JULIA
SPACESHIP_JULIA_SHOW=false

# DOCKER
SPACESHIP_DOCKER_SHOW=false

# AWS
SPACESHIP_AWS_SHOW=false

# VENV
SPACESHIP_VENV_SHOW=true
SPACESHIP_VENV_SYMBOL="venv "

# CONDA
SPACESHIP_CONDA_SHOW=true
SPACESHIP_CONDA_SYMBOL="conda "

# PYENV
SPACESHIP_PYENV_SHOW=true
SPACESHIP_PYENV_SYMBOL="py "

# .NET
SPACESHIP_DOTNET_SHOW=false

# EMBER
SPACESHIP_EMBER_SHOW=false

# KUBECONTEXT
SPACESHIP_KUBECONTEXT_SHOW=false
