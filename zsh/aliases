# vim:ft=zsh
# Filename: aliases
#
# Sourced By: $ZSH/zshrc
# Symlink To: N/A
#
# Purpose: This files contains all of my personal zsh aliases

# package manager
alias pms="pacman -Ss"
alias pmi="sudo pacman -S"
alias pmu="sudo pacman -Syu"
alias pmr="sudo pacman -Rns"
alias pmq="sudo pacman -Qe"

# mpv streaming
alias m-live="mpv --untimed --profile=low-latency --no-cache"

# directories
alias md="mkdir -p"
alias rd="rmdir"
alias l="ls -lh --color --group-directories-first"
alias ls="ls --color --group-directories-first"
alias la="ls -A --color --group-directories-first"
alias ll="ls -lAh --color --group-directories-first"

# search
alias grep="grep --color=auto"

# launch programs
alias pdf="zathura --fork"
alias v="nvim"

# navigate to and edit dotfiles
alias dotfiles="cd   $DOTFILES"
alias ealiases="nvim $DOTFILES/zsh/aliases"
alias efuncs="nvim   $DOTFILES/zsh/functions"
alias ezshenv="nvim  $DOTFILES/zsh/zshenv"
alias ezshrc="nvim   $DOTFILES/zsh/zshrc"
alias rzsh="source   $DOTFILES/zsh/zshrc && clear"
alias ei3="nvim      $DOTFILES/i3/config"
alias envim="nvim    $DOTFILES/nvim/init.vim"

# chris' lib
alias lib-down="rsync -h -r -t -v --ignore-existing  --info=stats1 complexjty@vps:/usr/share/library ~"
alias fzf="fzf --color=bg+:232"

