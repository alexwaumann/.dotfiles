# prompt
POWERLEVEL9K_DISABLE_RPROMPT=true
POWERLEVEL9K_LEFT_PROMPT_ELEMENTS=(dir vcs dir_writable)
POWERLEVEL9K_PROMPT_ON_NEWLINE=true
POWERLEVEL9K_MULTILINE_FIRST_PROMPT_PREFIX=''
POWERLEVEL9K_MULTILINE_LAST_PROMPT_PREFIX=' \uf432 '

# separators
POWERLEVEL9K_LEFT_SEGMENT_SEPARATOR=''
POWERLEVEL9K_LEFT_SUBSEGMENT_SEPARATOR=''

# colors
POWERLEVEL9K_OS_ICON_BACKGROUND='#000'
POWERLEVEL9K_OS_ICON_FOREGROUND='002'
POWERLEVEL9K_DIR_HOME_BACKGROUND='#000'
POWERLEVEL9K_DIR_HOME_FOREGROUND='004'
POWERLEVEL9K_DIR_HOME_SUBFOLDER_BACKGROUND='#000'
POWERLEVEL9K_DIR_HOME_SUBFOLDER_FOREGROUND='004'
POWERLEVEL9K_DIR_ETC_BACKGROUND='#000'
POWERLEVEL9K_DIR_ETC_FOREGROUND='004'
POWERLEVEL9K_DIR_WRITABLE_FORBIDDEN_BACKGROUND='#000'
POWERLEVEL9K_DIR_WRITABLE_FORBIDDEN_FOREGROUND='001'

POWERLEVEL9K_VCS_CLEAN_BACKGROUND='#000'
POWERLEVEL9K_VCS_CLEAN_FOREGROUND='002'
POWERLEVEL9K_VCS_MODIFIED_BACKGROUND='#000'
POWERLEVEL9K_VCS_MODIFIED_FOREGROUND='003'
POWERLEVEL9K_VCS_UNTRACKED_BACKGROUND='#000'
POWERLEVEL9K_VCS_UNTRACKED_FOREGROUND='011'

# vcs
POWERLEVEL9K_VCS_BRANCH_ICON='\uf418 '
POWERLEVEL9K_VCS_COMMIT_ICON='\uf417'
POWERLEVEL9K_VCS_STAGED_ICON='\uf918'
POWERLEVEL9K_VCS_UNSTAGED_ICON='\uf876'
POWERLEVEL9K_VCS_UNTRACKED_ICON='\uf29c'
POWERLEVEL9K_VCS_INCOMING_CHANGES_ICON='\uf547'
POWERLEVEL9K_VCS_OUTGOING_CHANGES_ICON='\uf55f'
POWERLEVEL9K_VCS_STASH_ICON='\uf62f'

# dir
POWERLEVEL9K_HOME_ICON='\uf015'
POWERLEVEL9K_HOME_SUB_ICON='\uf07b'
POWERLEVEL9K_FOLDER_ICON='\uf07b'
POWERLEVEL9K_ETC_ICON='\uf07b'
POWERLEVEL9K_LOCK_ICON='\uf840'

POWERLEVEL9K_SHORTEN_DIR_LENGTH=7
POWERLEVEL9K_SHORTEN_STRATEGY='truncate_from_right'
POWERLEVEL9K_SHORTEN_DELIMITER='..'

[ -f $ZSH/aliases ] && source $ZSH/aliases
[ -f $ZPLUG_HOME/init.zsh ] && source $ZPLUG_HOME/init.zsh
[ -f $ZSH/anaconda3 ] && source $ZSH/anaconda3

zplug "zsh-users/zsh-syntax-highlighting", defer:2
zplug "bhilburn/powerlevel9k", use:powerlevel9k.zsh-theme

if ! zplug check; then
    zplug install
fi

zplug load
